<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Transaction"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="?attr/textFillColor"
        android:layout_margin="12dp" />



    <RadioGroup
        android:id="@+id/transaction_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp">


        <RadioButton
            android:id="@+id/radio_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit"
            android:textColor="?attr/badgeTextColor"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/radio_debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit"
            android:textColor="?attr/badgeTextColor"
            android:layout_marginStart="12dp"
            android:textSize="18sp"/>
    </RadioGroup>

    <EditText
        android:id="@+id/edit_text_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/edit_text_bg"
        android:drawableStart="@drawable/ic_rupee"
        android:drawablePadding="10dp"
        android:hint="Amount (â‚¹)"
        android:inputType="number"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="?attr/badgeTextColor"/>

    <EditText
        android:id="@+id/edit_text_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Notes"
        android:textSize="18sp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:drawableStart="@drawable/ic_notes"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:textColor="?attr/badgeTextColor"/>

    <EditText
        android:id="@+id/edit_text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Date ðŸ“…"
        android:textSize="18sp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:drawableStart="@drawable/ic_date"
        android:drawablePadding="10dp"
        android:focusable="false"
        android:clickable="true"
        android:inputType="date"
        android:textColor="?attr/badgeTextColor"/>

    <EditText
        android:id="@+id/edit_text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Time ðŸ•“"
        android:textSize="18sp"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:focusable="false"
        android:clickable="true"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="10dp"
        android:inputType="none"
        android:textColor="?attr/badgeTextColor"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:background="?attr/colorPrimary"/>



</LinearLayout>